{
  "private": true,
  "author": "Nahuel Rosas <rosasnahuel.dev@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=!./apps/*",
    "dev": "turbo run dev --no-cache --continue --filter=!./packages/*",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules && rm -rf pnpm-lock.yaml",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish",
    "prepare": "turbo run build --filter=!./apps/*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@swc/core": "^1.3.67",
    "eslint": "^8.43.0",
    "eslint-config-robust": "workspace:*",
    "next": "^13.4.7",
    "prettier": "^2.8.8",
    "turbo": "^1.10.7"
  },
  "packageManager": "pnpm@7.15.0"
}
